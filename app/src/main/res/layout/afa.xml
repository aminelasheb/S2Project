<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bachlan"
    android:orientation="horizontal"
    tools:context=".AFA"
    tools:ignore="MissingDefaultResource">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
 <ImageView
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:background="@drawable/shapee"
      android:src="@drawable/algeriaflags"
     android:layout_marginTop="280dp"
     android:layout_marginLeft="90dp"
     />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shapee"
            android:src="@drawable/englishflags"
            android:layout_marginTop="535dp"
            android:layout_marginLeft="90dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shapee"
            android:src="@drawable/flagsfrensh"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="90dp"
            />
        <ImageView
            android:layout_width="1000dp"
            android:layout_height="1000dp"
            android:src="@drawable/readinast"
            android:layout_marginBottom="400dp"
            />
        <TextView
      android:layout_width="200dp"
      android:layout_height="wrap_content"
      android:textStyle="bold"
      android:text="LANGUAGES"
      android:textColor="#FFC107"
      android:textSize="18dp"
      android:textAlignment="center"
      android:layout_marginTop="100dp"
      android:gravity="center_horizontal"
      android:layout_marginLeft="110dp"
      />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shapee"
        android:text="ANGLAIS"
        android:id="@+id/angg"
        android:textColor="#11295a"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="140dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shapee"
        android:text="FRANCAIS"
        android:textColor="#11295a"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="140dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shapee"
        android:text="ARABE"
        android:textColor="#11295a"
        android:textSize="30dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="140dp"
        />

    </RelativeLayout>
</LinearLayout>